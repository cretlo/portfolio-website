---
import { Image } from "astro:assets";
import Icon from "../components/Icon";
import Layout from "../layouts/Layout.astro";
import projectsData from "../data/projects.ts";

export function getStaticPaths() {
    return projectsData;
}

const { title, desc, technologies, about, imgData, link, github } = Astro.props;
---

<Layout title={title}>
    <div class="py-4">
        <div class="mb-4">
            <a
                class="px-4 py-2 border border-black hover:bg-slate-500 hover:text-white transition-colors ease-in"
                href="/#projects"
                transition:name="#projects">‚Üê Back to Projects</a
            >
        </div>
        <h1 transition:name="title" class="text-2xl font-bold mb-4">
            {title}
        </h1>
        <Image
            transition:name="image"
            src={imgData}
            alt={desc}
            class="border border-black mb-4"
        />
        <div>
            <h2 class="text-lg font-semibold">Technologies</h2>
            <div class="flex gap-6 py-4">
                {technologies.map((tech) => <Icon title={tech} />)}
                <!--
                {
                    technologies.map((Icon: IconType) => (
                        <Icon
                            className="fill-slate-500"
                            title={Icon.name}
                            size={48}
                        />
                    ))
                }
                -->
            </div>
            <h2 class="text-lg font-semibold">Links</h2>
            <div class="py-4">
                {
                    link && (
                        <a
                            href={link}
                            target="_blank"
                            class="px-4 py-2 me-4 border border-black hover:bg-slate-500 hover:text-white transition-colors ease-in"
                        >
                            Website
                        </a>
                    )
                }
                <a
                    href={github}
                    target="_blank"
                    class="px-4 py-2 border border-black hover:bg-slate-500 hover:text-white transition-colors ease-in"
                    >Github</a
                >
            </div>
            <h2 class="text-lg font-semibold">About</h2>
            <p class="py-4">{about}</p>
        </div>
    </div>
</Layout>
